{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.formatOnSave": true,

  // Python-Interpreter auf die aktuelle venv setzen
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Code Runner auf die aktuelle venv anpassen
  "code-runner.executorMap": {
    "python": "${workspaceFolder}/.venv/bin/python -u"
  },

  // Terminal-Konfiguration für automatische venv-Aktivierung
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,

  // Testing-Konfiguration
  "python.testing.unittestEnabled": true,
  "python.testing.pytestEnabled": false,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./tests",
    "-p",
    "test_*.py",
    "-p",
    "*_test.py"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.cwd": "${workspaceFolder}",

  // Zusätzliche Python-Einstellungen
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "standard",

  // Workspace-spezifische Pfade
  "python.envFile": "${workspaceFolder}/.vscode/.env",
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:venv",
      "packageManager": "ms-python.python:pip"
    }
  ]
}
